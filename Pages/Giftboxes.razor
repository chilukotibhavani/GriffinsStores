@page "/giftboxes"
@using MudBlazor
@using GriffinsStore1.Shared
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Luxury Gift Boxes - Griffins Store</PageTitle>

<div class="gift-boxes-page">
    <!-- Category Description -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">

        <!-- Product Grid -->
        <MudGrid Spacing="4" Justify="Justify.Center">
            @foreach (var product in giftBoxProducts)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Class="product-card">
                        <MudCardMedia Image="@product.ImageUrl" Height="250" Class="product-image" />
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.body2" Class="product-description">@product.Description</MudText>
                            <MudText Typo="Typo.h6" Class="product-price">$@product.Price</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Default"
                                       FullWidth="true"
                                       Class="add-to-cart-btn"
                                       OnClick="@(() => AddToCart(product))">
                                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                                Add to Cart
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        <!-- Features Section -->
        <div class="features-section mt-12">
            <MudText Typo="Typo.h4" Class="section-title text-center mb-6">
                Why Choose Our Gift Boxes
            </MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.CardGiftcard" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Premium Packaging</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Elegantly designed boxes perfect for any occasion
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Diamond" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Curated Selection</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Handpicked assortments of our finest chocolates
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Gift Ready</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Arrives beautifully wrapped with a personalized card
                        </MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudContainer>
</div>

@code {
    private List<Product> giftBoxProducts = new()
    {
        new Product
        {
            Name = "Classic Assortment",
            Description = "12-piece selection of milk, dark, and white chocolates",
            Price = 29.99m,
            ImageUrl = "Images/gift-box-1.png"
        },
        new Product
        {
            Name = "Premium Deluxe Box",
            Description = "24-piece luxury collection with truffles and pralines",
            Price = 49.99m,
            ImageUrl = "Images/gift-box-2.png"
        },
        new Product
        {
            Name = "Dark Chocolate Lovers",
            Description = "16-piece box featuring our finest dark chocolate varieties",
            Price = 39.99m,
            ImageUrl = "Images/gift-box-3.png"
        },
        new Product
        {
            Name = "Valentine's Romance",
            Description = "Heart-shaped box with 20 romantic chocolate pieces",
            Price = 44.99m,
            ImageUrl = "Images/gift-box-4.png"
        },
        new Product
        {
            Name = "Corporate Excellence",
            Description = "36-piece executive gift box for business occasions",
            Price = 69.99m,
            ImageUrl = "Images/gift-box-5.png"
        },
        new Product
        {
            Name = "Seasonal Celebration",
            Description = "18-piece festive collection with seasonal flavors",
            Price = 42.99m,
            ImageUrl = "Images/gift-box-6.png"
        }
    };

    public class Product
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }

    private void AddToCart(Product product)
    {
        var cartItem = new CartItem
            {
                Name = product.Name,
                Description = product.Description,
                Price = product.Price,
                ImageUrl = product.ImageUrl,
                Quantity = 1
            };

        CartService.AddToCart(cartItem);
        Snackbar.Add("Added to cart!", Severity.Success);
    }
}

