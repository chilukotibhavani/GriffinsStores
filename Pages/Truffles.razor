@page "/truffles"
@using MudBlazor

<PageTitle>Gourmet Truffles - Griffins Store</PageTitle>

<div class="truffles-page">
    <!-- Category Description -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">

        <!-- Product Grid -->
        <MudGrid Spacing="4" Justify="Justify.Center">
            @foreach (var product in truffleProducts)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Class="product-card">
                        <MudCardMedia Image="@product.ImageUrl" Height="250" Class="product-image" />
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.body2" Class="product-description">@product.Description</MudText>
                            <MudText Typo="Typo.h6" Class="product-price">$@product.Price</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Default"
                                       FullWidth="true"
                                       Class="add-to-cart-btn">
                                Add to Cart
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        <!-- Features Section -->
        <div class="features-section mt-12">
            <MudText Typo="Typo.h4" Class="section-title text-center mb-6">
                Why Choose Our Truffles
            </MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Verified" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Gourmet Excellence</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Hand-rolled with premium ganache and finest ingredients
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Handshake" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Master Crafted</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Created by expert chocolatiers using traditional methods
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Pure Indulgence</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Melt-in-your-mouth texture with exquisite flavors
                        </MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudContainer>
</div>

