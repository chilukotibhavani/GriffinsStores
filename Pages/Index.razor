                        <MudText Typo="Typo.h4" Class="category-name">DARK CHOCOLATE</MudText>
                        <MudButton Variant="Variant.Filled"
                                   Class="category-btn dark-btn"
                                   EndIcon="Icons.Material.Filled.ArrowForward"
                                   OnClick="() => NavigateToDarkChocolate()">
                            SHOP NOW
                        </MudButton>
                    </div>
                    <div class="category-image">
                        <MudImage Src="Images/dark-chocolate.png"
                                  Alt="Dark Chocolate"
                                  Class="category-img" />
                    </div>
                </div>
            </MudPaper>
        </MudItem>

        <!-- Milk Chocolate Category -->
        <MudItem xs="12" sm="6" md="4" lg="6" Class="category-item">
            <MudPaper Class="category-card milk-chocolate-card" Elevation="0" OnClick="() => NavigateToMilkChocolate()">
                <div class="category-content">
                    <div class="category-text">
                        <MudText Typo="Typo.subtitle2" Class="category-subtitle">Creamy Smooth</MudText>
                        <MudText Typo="Typo.h4" Class="category-name">MILK CHOCOLATE</MudText>
                        <MudButton Variant="Variant.Filled"
                                   Class="category-btn milk-btn"
                                   EndIcon="Icons.Material.Filled.ArrowForward"
                                   OnClick="() => NavigateToMilkChocolate()">
                            SHOP NOW
                        </MudButton>
                    </div>
                    <div class="category-image">
                        <MudImage Src="Images/milk-chocolate.png"
                                  Alt="Milk Chocolate"
                                  Class="category-img" />
                    </div>
                </div>
            </MudPaper>
        </MudItem>

        <!-- White Chocolate Category -->
        <MudItem xs="12" sm="6" md="4" lg="4" Class="category-item">
            <MudPaper Class="category-card white-chocolate-card" Elevation="0" OnClick="() => NavigateToWhiteChocolate">
                <div class="category-content">
                    <div class="category-text">
                        <MudText Typo="Typo.subtitle2" Class="category-subtitle">Luxury Artisan</MudText>
                        <MudText Typo="Typo.h4" Class="category-name">WHITE CHOCOLATE</MudText>
                        <MudButton Variant="Variant.Filled"
                                   Class="category-btn white-btn"
                                   EndIcon="Icons.Material.Filled.ArrowForward"
                                   OnClick="() => NavigateToWhiteChocolate()">
                            SHOP NOW
                        </MudButton>
                    </div>
                    <div class="category-image">
                        <MudImage Src="Images/white-chocolate.png"
                                  Alt="White Chocolate"
                                  Class="category-img" />
                    </div>
                </div>
            </MudPaper>
        </MudItem>

        <!-- Truffles Category -->
        <MudItem xs="12" sm="6" md="4" lg="4" Class="category-item">
            <MudPaper Class="category-card truffles-card" Elevation="0" onclick="() => NavigateToTruffles">
                <div class="category-content">
                    <div class="category-text">
                        <MudText Typo="Typo.subtitle2" Class="category-subtitle">Gourmet Experience</MudText>
                        <MudText Typo="Typo.h4" Class="category-name">TRUFFLES</MudText>
                        <MudButton Variant="Variant.Filled"
                                   Class="category-btn truffles-btn"
                                   EndIcon="Icons.Material.Filled.ArrowForward"
                                   OnClick="() => NavigateToTruffles()">
                            SHOP NOW
                        </MudButton>
                    </div>
                    <div class="category-image">
                        <MudImage Src="Images/truffles.png"
                                  Alt="Chocolate Truffles"
                                  Class="category-img" />
                    </div>
                </div>
            </MudPaper>
        </MudItem>

        <!-- Gift Boxes Category -->
        <MudItem xs="12" sm="6" md="4" lg="4" Class="category-item">
            <MudPaper Class="category-card gift-boxes-card" Elevation="0" onclick="() => NavigateToGiftboxes">
                <div class="category-content">
                    <div class="category-text">
                        <MudText Typo="Typo.subtitle2" Class="category-subtitle">Perfect Gifting</MudText>
                        <MudText Typo="Typo.h4" Class="category-name">GIFT BOXES</MudText>
                        <MudButton Variant="Variant.Filled"
                                   Class="category-btn gift-btn"
                                   EndIcon="Icons.Material.Filled.ArrowForward"
                                   OnClick="() => NavigateToGiftboxes()">
                            SHOP NOW
                        </MudButton>
                    </div>
                    <div class="category-image">
                        <MudImage Src="Images/gift-boxes.png"
                                  Alt="Chocolate Gift Boxes"
                                  Class="category-img" />
                    </div>
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</div>
