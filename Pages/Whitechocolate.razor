    {
        new Product
        {
            Name = "Classic White Bar",
            Description = "Pure, creamy white chocolate perfection",
            Price = 10.99m,
            ImageUrl = "Images/white-chocolate-1.png"
        },
        new Product
        {
            Name = "Raspberry White Bliss",
            Description = "White chocolate with tangy raspberry swirls",
            Price = 12.99m,
            ImageUrl = "Images/white-chocolate-2.png"
        },
        new Product
        {
            Name = "Macadamia White Dream",
            Description = "Smooth white chocolate with buttery macadamia nuts",
            Price = 14.99m,
            ImageUrl = "Images/white-chocolate-3.png"
        },
        new Product
        {
            Name = "Coconut White Paradise",
            Description = "White chocolate infused with toasted coconut",
            Price = 12.99m,
            ImageUrl = "Images/white-chocolate-4.png"
        },
        new Product
        {
            Name = "Lemon White Zest",
            Description = "Refreshing white chocolate with natural lemon essence",
            Price = 11.99m,
            ImageUrl = "Images/white-chocolate-5.png"
        },
        new Product
        {
            Name = "Vanilla Bean White",
            Description = "Premium white chocolate with Madagascar vanilla",
            Price = 13.99m,
            ImageUrl = "Images/white-chocolate-6.png"
        }
    };

    public class Product
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }
}

<style>
