@page "/milkchocolate"
@using MudBlazor
@using GriffinsStore1.Shared
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
<PageTitle>Creamy Milk Chocolate - Griffins Store</PageTitle>

<div class="milk-chocolate-page">
    <!-- Category Description -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
        
        <!-- Product Grid -->
        <MudGrid Spacing="4" Justify="Justify.Center">
            @foreach (var product in milkChocolateProducts)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Class="product-card">
                        <MudCardMedia Image="@product.ImageUrl" Height="250" Class="product-image" />
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.body2" Class="product-description">@product.Description</MudText>
                            <MudText Typo="Typo.h6" Class="product-price">$@product.Price</MudText>
                        </MudCardContent>
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Default"
                                   FullWidth="true"
                                   Class="add-to-cart-btn"
                                   OnClick="@(() => AddToCart(product))">
                            <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                            Add to Cart
                        </MudButton>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        <!-- Features Section -->
        <div class="features-section mt-12">
            <MudText Typo="Typo.h4" Class="section-title text-center mb-6">
                Why Choose Our Milk Chocolate
            </MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Verified" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Creamy Perfection</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Made with premium milk and 35-45% fine cocoa
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Handshake" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Family Favorite</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Loved by all ages for its smooth, sweet taste
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Feel Good</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Rich in calcium and natural mood enhancers
                        </MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudContainer>
</div>

@code {
    private List<Product> milkChocolateProducts = new()
    {
        new Product 
        { 
            Name = "Classic Milk Bar",
            Description = "Our signature smooth milk chocolate bar",
            Price = 9.99m,
            ImageUrl = "Images/milk-chocolate-1.png"
        },
        new Product 
        { 
            Name = "Caramel Milk Swirl",
            Description = "Creamy milk chocolate with ribbons of golden caramel",
            Price = 11.99m,
            ImageUrl = "Images/milk-chocolate-2.png"
        },
        new Product 
        { 
            Name = "Hazelnut Milk Delight",
            Description = "Smooth milk chocolate with crunchy roasted hazelnuts",
            Price = 12.99m,
            ImageUrl = "Images/milk-chocolate-3.png"
        },
        new Product 
        { 
            Name = "Cookies & Cream",
            Description = "Milk chocolate studded with cookie pieces",
            Price = 11.99m,
            ImageUrl = "Images/milk-chocolate-4.png"
        },
        new Product 
        { 
            Name = "Strawberry Milk Fusion",
            Description = "Sweet milk chocolate infused with real strawberry",
            Price = 10.99m,
            ImageUrl = "Images/milk-chocolate-5.png"
        },
        new Product 
        { 
            Name = "Toffee Crunch Milk",
            Description = "Rich milk chocolate with buttery toffee bits",
            Price = 12.99m,
            ImageUrl = "Images/milk-chocolate-6.png"
        }
    };

    public class Product
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }

    private void AddToCart(Product product)
    {
        var cartItem = new CartItem
            {
                Name = product.Name,
                Description = product.Description,
                Price = product.Price,
                ImageUrl = product.ImageUrl,
                Quantity = 1
            };

        CartService.AddToCart(cartItem);
        Snackbar.Add("Added to cart!", Severity.Success);
    }
}

