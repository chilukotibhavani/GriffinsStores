@page "/darkchocolate"
@using MudBlazor

<PageTitle>Premium Dark Chocolate - Griffins Store</PageTitle>

<div class="dark-chocolate-page">
   @*  <!-- Hero Section -->
    <div class="category-hero">
        <div class="hero-overlay">
            <MudText Typo="Typo.h1" Class="category-hero-title">
                Premium Dark Chocolate
            </MudText>
            <MudText Typo="Typo.h5" Class="category-hero-subtitle">
                Rich, Intense, and Unforgettable
            </MudText>
        </div>
    </div> *@

    <!-- Category Description -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
        
        <!-- Product Grid -->
        <MudGrid Spacing="4" Justify="Justify.Center">
            @foreach (var product in darkChocolateProducts)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Class="product-card">
                        <MudCardMedia Image="@product.ImageUrl" Height="250" Class="product-image" />
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.body2" Class="product-description">@product.Description</MudText>
                            <MudText Typo="Typo.h6" Class="product-price">$@product.Price</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Filled" 
                                       Color="Color.Dark" 
                                       FullWidth="true"
                                       Class="add-to-cart-btn">
                                Add to Cart
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        <!-- Features Section -->
        <div class="features-section mt-12">
            <MudText Typo="Typo.h4" Class="section-title text-center mb-6">
                Why Choose Our Dark Chocolate
            </MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Verified" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Premium Quality</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Made with 70-85% cocoa from ethically sourced beans
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Handshake" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Artisan Crafted</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Handcrafted in small batches by master chocolatiers
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Health Benefits</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Rich in antioxidants and natural mood enhancers
                        </MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudContainer>
</div>

@code {
