    {
        new Product 
        { 
            Name = "70% Dark Origin Bar",
            Description = "Single-origin Ecuador cocoa with notes of cherry and citrus",
            Price = 12.99m,
            ImageUrl = "Images/dark-chocolate-1.png"
        },
        new Product 
        { 
            Name = "85% Intense Dark",
            Description = "Ultra-dark chocolate for true connoisseurs",
            Price = 14.99m,
            ImageUrl = "Images/dark-chocolate-2.jpg"
        },
        new Product 
        { 
            Name = "Sea Salt Dark",
            Description = "70% dark chocolate with Himalayan sea salt crystals",
            Price = 13.99m,
            ImageUrl = "Images/dark-chocolate-3.png"
        },
        new Product 
        { 
            Name = "Dark Almond Bark",
            Description = "Rich dark chocolate studded with roasted almonds",
            Price = 15.99m,
            ImageUrl = "Images/dark-chocolate-4.png"
        },
        new Product 
        { 
            Name = "Orange Dark Fusion",
            Description = "Dark chocolate infused with natural orange essence",
            Price = 13.99m,
            ImageUrl = "Images/dark-chocolate-5.png"
        },
        new Product 
        { 
            Name = "Mint Dark Delight",
