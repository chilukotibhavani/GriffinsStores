@page "/darkchocolate"
@using MudBlazor
@using GriffinsStore1.Shared
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Premium Dark Chocolate - Griffins Store</PageTitle>

<div class="dark-chocolate-page">
    <!-- Category Description -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">

        <!-- Product Grid -->
        <MudGrid Spacing="4" Justify="Justify.Center">
            @foreach (var product in darkChocolateProducts)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard Class="product-card">
                        <MudCardMedia Image="@product.ImageUrl" Height="250" Class="product-image" />
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="product-name">@product.Name</MudText>
                            <MudText Typo="Typo.body2" Class="product-description">@product.Description</MudText>
                            <MudText Typo="Typo.h6" Class="product-price">$@product.Price</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Dark"
                                       FullWidth="true"
                                       Class="add-to-cart-btn"
                                       OnClick="@(() => AddToCart(product))">
                                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                                Add to Cart
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

        <!-- Features Section -->
        <div class="features-section mt-12">
            <MudText Typo="Typo.h4" Class="section-title text-center mb-6">
                Why Choose Our Dark Chocolate
            </MudText>
            <MudGrid Spacing="4">
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Verified" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Premium Quality</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Made with 70-85% cocoa from ethically sourced beans
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Handshake" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Artisan Crafted</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Handcrafted in small batches by master chocolatiers
                        </MudText>
                    </div>
                </MudItem>
                <MudItem xs="12" md="4">
                    <div class="feature-card">
                        <MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Large" Class="feature-icon" />
                        <MudText Typo="Typo.h6" Class="feature-title">Health Benefits</MudText>
                        <MudText Typo="Typo.body2" Class="feature-text">
                            Rich in antioxidants and natural mood enhancers
                        </MudText>
                    </div>
                </MudItem>
            </MudGrid>
        </div>
    </MudContainer>
</div>

@code {
    private List<Product> darkChocolateProducts = new()
    {
        new Product
        {
            Name = "70% Dark Origin Bar",
            Description = "Single-origin Ecuador cocoa with notes of cherry and citrus",
            Price = 12.99m,
            ImageUrl = "Images/dark-chocolate-1.png"
        },
        new Product
        {
            Name = "85% Intense Dark",
            Description = "Ultra-dark chocolate for true connoisseurs",
            Price = 14.99m,
            ImageUrl = "Images/dark-chocolate-2.jpg"
        },
        new Product
        {
            Name = "Sea Salt Dark",
            Description = "70% dark chocolate with Himalayan sea salt crystals",
            Price = 13.99m,
            ImageUrl = "Images/dark-chocolate-3.png"
        },
        new Product
        {
            Name = "Dark Almond Bark",
            Description = "Rich dark chocolate studded with roasted almonds",
            Price = 15.99m,
            ImageUrl = "Images/dark-chocolate-4.png"
        },
        new Product
        {
            Name = "Orange Dark Fusion",
            Description = "Dark chocolate infused with natural orange essence",
            Price = 13.99m,
            ImageUrl = "Images/dark-chocolate-5.png"
        },
        new Product
        {
            Name = "Mint Dark Delight",
            Description = "Smooth dark chocolate with a refreshing mint twist",
            Price = 13.99m,
            ImageUrl = "Images/dark-chocolate-6.png"
        }
    };

    private void AddToCart(Product product)
    {
        var cartItem = new CartItem
            {
                Name = product.Name,
                Description = product.Description,
                Price = product.Price,
                ImageUrl = product.ImageUrl,
                Quantity = 1
            };

        CartService.AddToCart(cartItem);
        Snackbar.Add("Added to cart!", Severity.Success);
    }

    public class Product
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }
}

